@model IEnumerable<Worflow.Models.ProdutoSegmento>

@foreach(var item in Model)
{
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="chc_@item.produto.Id"/>
        <label class="form-check-label ml-4" for="chkProdutos">
            @Html.DisplayFor(modelItem => item.produto.Descricao)
        </label>
    </div>
}

