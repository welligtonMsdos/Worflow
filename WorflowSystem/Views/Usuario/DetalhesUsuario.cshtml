@model Worflow.Models.Usuario

@{
    ViewData["Title"] = "Detalhes";
}

<h3><i class="fa-solid fa-list" style="color: var(--corPrincipal); margin-right: 5px"></i>Detalhes usuário</h3>

<div class="card">

    <div class="card-body">
        <form>
            <fieldset disabled>

                <div class="row mb-3">

                    <div class="col-6">

                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />

                    </div>

                    <div class="col-6">
                        
                        <label asp-for="RACF" class="control-label"></label>
                        <input asp-for="RACF" class="form-control" />

                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-6">
                        <div class="custom-control custom-checkbox">                           
                            
                            <input type="checkbox" asp-for="Ativo" class="custom-control-input" />
                            <label asp-for="Ativo" class="custom-control-label"></label>

                        </div>
                    </div>

                    <div class="col-6">                      
                        
                        <label asp-for="Perfil.Descricao" class="control-label"></label>
                        <input asp-for="Perfil.Descricao" class="form-control" />

                    </div>
                </div>

            </fieldset>

        </form>
    </div>

    <div class="card-footer" style="text-align:end">
        <button type="button" class="btn btn-Acoes" onclick="location.href='@Url.Action("ListarUsuarios", "Usuario")'">Voltar</button>
    </div>

</div>



