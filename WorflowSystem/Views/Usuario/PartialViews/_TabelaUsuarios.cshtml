@model IEnumerable<Worflow.Models.Usuario>
@{

}
<table class="table">
    <thead class="tableCabecalho">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RACF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfil.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RACF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Perfil.Descricao)
                </td>
                <td style="text-align:end">

                    <button type="button" class="btn btn-Acoes mb-2" onclick="location.href='@Url.Action("EditarUsuario", "Usuario", new { id = item.Id })'">Editar</button>

                    <button type="button" class="btn btn-Acoes mb-2" onclick="location.href='@Url.Action("DetalhesUsuario", "Usuario", new { id = item.Id })'">Detalhes</button>

                    <button type="button" class="btn btn-Excluir mb-2" data-bs-toggle="modal" data-bs-target="#modalExcluir" onclick="setIdExcluir(@item.Id)">
                        Excluir
                    </button>

                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalExcluir" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Excluir Usuário</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="ExcluirUsuario">

                <div class="modal-body">
                    <h5>Deseja realmente excluir<i class="fa-regular fa-question ml-2" style="color: var(--corPrincipal); margin-right: 5px"></i></h5>
                    <input type="text" name="id" id="id" hidden>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-Acoes mr-4" data-bs-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-Acoes">Sim</button>
                </div>

            </form>

        </div>
    </div>
</div>


