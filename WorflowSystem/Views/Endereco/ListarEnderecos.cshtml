@model IEnumerable<Worflow.Models.Endereco>

@{
    ViewData["Title"] = "GetEndereco";
}

<form asp-action="PesquisarEnderecos">

    <div class="row mb-3">

        <div class="col-8">

            <div class="input-group flex-nowrap mb-2">
                <span class="input-group-text" id="addon-wrapping"><i class="fa-solid fa-magnifying-glass" style="color: var(--corPrincipal); margin-right: 5px"></i></span>
                <input type="text"
                       class="form-control"
                       id="txtPesquisar"
                       name="pesquisar"
                       placeholder="Rua, Bairro, Cidade"
                       aria-label="Username"
                       aria-describedby="addon-wrapping">
            </div>

        </div>

        <div class="col-2">
            <button type="submit" class="btn btn-Acoes-v2 mb-2">Pesquisar</button>
        </div>

        <div class="col-2" style="text-align:end">
            <button type="button" class="btn btn-Acoes mb-2" onclick="location.href='@Url.Action("CreateEndereco", "Endereco")'">Novo</button>
        </div>

    </div>

</form>

<div class="table-responsive">

    <partial name="~/Views/Endereco/PartialViews/_TabelaEnderecos.cshtml" />

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

  
}

