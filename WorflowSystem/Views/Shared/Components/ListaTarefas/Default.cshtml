@model IEnumerable<Worflow.Models.Agenda>

@{
    Layout = null;
}

<div class="border border-light shadow rounded rounded-lg p-4">

    @if (Model.Count() > 0)
    {
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-2">

                            <span class="badge rounded-pill bg-success">
                                @Html.DisplayFor(modelItem => item.Horario)
                            </span>

                        </div>

                        <div class="col-6">
                            <label>@item.Comentario</label>
                        </div>

                        <div class="col-4 col-md-4 col-sm-1 d-grid gap-2 d-sm-flex d-md-flex justify-content-md-end">

                            <button type="button" class="btn btn-Acoes mb-2" onclick="abrirEditarAgenda(@item.Id)">
                                <i class="fa fa-pencil-square"></i>
                            </button>

                            <button type="button" class="btn btn-Excluir mb-2" onclick="abrirExcluirAgenda(@item.Id)">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>

                        </div>
                    </div>
                </li>
            }
        </ul>
    }

</div>



