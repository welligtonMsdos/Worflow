@model IEnumerable<Worflow.Models.Agenda>

@{
    Layout = null;
}

<div class="border border-light shadow rounded rounded-lg p-4">

    @if (Model.Count() > 0)
    {
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-2">
                          
                            <span class="badge rounded-pill bg-success">
                                @Html.DisplayFor(modelItem => item.Horario)
                            </span>

                        </div>

                        <div class="col-6">                          
                           <label>@item.Comentario</label>
                        </div>

                        <div class="col-4">
                            <a asp-action="AtualizarTarefa" asp-route-tarefaId="@item.Id" class="btn btn-sm btn-outline-primary rounded-circle">
                                <i class="fa fa-pencil-square"></i>
                            </a>

                            <a class="btn btn-sm btn-outline-danger rounded-circle">
                                <i class="fa fa-times-circle"></i>
                            </a>

                        </div>
                    </div>
                </li>
            }
        </ul>
    }
  
</div>